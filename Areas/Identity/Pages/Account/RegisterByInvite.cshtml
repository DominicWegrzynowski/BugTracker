@page "{id}"
@model RegisterModel
@{
    ViewData["Title"] = "Register by Invite";
    ViewData["MainMenu"] = "Register by Invite";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";

    Invite invite = (Invite)ViewData["Invite"];


    var z = 1;
}

<div class="card">
    <div class="body">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Register</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" value="@invite.InviteeEmail" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control" value="@invite.InviteeFirstName"/>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="form-control" value="@invite.InviteeLastName"/>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script src="~/popper.min.js"></script>
<script src="~/bootstrap/js/bootstrap.min.js"></script>  
