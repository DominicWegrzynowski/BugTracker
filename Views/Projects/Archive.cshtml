@model BugTracker.Models.Project

@{
    ViewData["Title"] = "Archive";
}

<div class="row clearfix">
    <div class="col-12 col-md-6 col-lg-6 text-start">
        <div class="card">
            <div class="body">
                <h3>Are you sure you want to archive this project?</h3>
                <hr />
                <div class="row g-3">
                    <div class="col-3">
                        <h5>@Model.Name</h5>
                    </div>
                    <div class="col-12">
                       <p>@Html.Raw(Model.Description)</p>
                       <hr />
                    </div>
                    
                    <form asp-action="Archive" class="ml-3">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Archive" class="btn btn-danger text-white" />  | 
                        <a asp-action="Index">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

