@model BugTracker.Models.Project

@{
    ViewData["Title"] = "Restore";
}
<div class="app-wrapper">   
	<div class="app-content pt-3 p-md-3 p-lg-4">
		<div class="container-xl">
			<h2>Restore</h2>
			<div class="row g-3 mb-4 align-items-center justify-content-between">
               
                <div class="app-card h-100 col-6">
                    <div class="card-body">
                        <h3>Are you sure you want to restore this project?</h3>
                        <hr />
                        <div class="row g-3">
                            <div class="col-12">
                                <label asp-for="Name" class="control-label"></label>
                                <input disabled asp-for="Name" class="form-control" />
                                <span class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="Description" class="control-label"></label>
                                <input disabled asp-for="Description" class="form-control" />
                                <span class="text-danger"></span>
                            </div>
                            <form asp-action="Restore">
                                <input type="hidden" asp-for="Id" />
                                <input type="submit" value="Restore" class="btn btn-primary text-white" />  | 
                                <a asp-action="Index">Back to List</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
