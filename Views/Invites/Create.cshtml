@model BugTracker.Models.ViewModels.CreateInviteViewModel

@{
    ViewData["Title"] = "Create";
}


<div class="row clearfix">
    <div class="col-12 col-md-6 col-lg-6 text-start">
        <div class="card">
            <div class="body">
                <form class="row g-3" asp-action="Create" asp-controller="Invites" method="post">
                    <div class="form-group col-12">
                        <label class="control-label">Email</label>
                        <input asp-for="Invite.InviteeEmail" class="form-control"/>
                        <span asp-validation-for="Invite.InviteeEmail" class="text-danger"></span>
                    </div>

                    <div class="form-group col-12">
                        <label class="control-label">First Name</label>
                        <input asp-for="Invite.InviteeFirstName" class="form-control"/>
                        <span asp-validation-for="Invite.InviteeFirstName" class="text-danger"></span>
                    </div>

                    <div class="form-group col-12">
                        <label class="control-label">First Name</label>
                        <input asp-for="Invite.InviteeLastName" class="form-control"/>
                        <span asp-validation-for="Invite.InviteeLastName" class="text-danger"></span>
                    </div>

                    <div class="form-group col-12">
                        <select asp-for="Invite.ProjectId" asp-items="Model.Projects" class="form-control"></select>
                    </div>
                   
                    <div class="form-group col-12 text-start">
                        <input type="submit" value="Send Invite" class="btn btn-success text-white" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
