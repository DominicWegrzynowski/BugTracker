@model List<BTUser> 
@using Microsoft.AspNetCore.Identity
@using BugTracker.Services.Interfaces
@using BugTracker.Models.Enums
@using System.Linq;


@inject UserManager<BTUser> UserManager
@inject IBTProjectService ProjectService
@inject IBTRolesService RolesService

@{
    ViewData["Title"] = "All Users";
    BTUser user = await UserManager.GetUserAsync(User);
}

<div class="app-wrapper">
    <div class="app-content pt-3 p-md-3 p-lg-4">
        <div class="container-xl">
            <h1 class="app-page-title">Tickets</h1>
            @*Members Table*@
            <div class="row mb-1">
                <div class="col">
                    <div class="app-card app-card-orders-table shadow-sm mb-5">
                        <div class="card-body pt-3 ps-3">
                            <div class="table-responsive">
                                <table id="AllUsers" class="table app-table-hover mb-0 text-left">
                                    <thead>
                                        <tr>
                                            <th class="cell"></th>
                                            <th class="cell">Name</th>
                                            <th class="cell">Email</th>
                                            <th class="cell">Phone</th>
                                            <th class="cell">Role</th>
                                            <th class="cell">Profile</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach(BTUser member in Model)
                                        {     
                                            <tr>
                                                @if(member.AvatarFileData is null)
                                                {
                                                    <td class="cell">
                                                        <img class="rounded-circle" style="width:30px;height:30px;" src="https://cdn.icon-icons.com/icons2/1378/PNG/512/avatardefault_92824.png" alt="Default Avatar"/>
                                                    </td>
                                                }
                                                else
                                                {
                                                    <td class="cell">
                                                        <img class="rounded-circle" style="width:60px;height:60px;" src="data:image/*;base64,@(Convert.ToBase64String(member.AvatarFileData))" alt="@member.FullName's avatar'" />
                                                    </td>
                                                }
                                                <td class="cell">@member.FullName</td>

                                                <td class="cell">@member.Email.ToLower()</td>
                                                
                                                <td class="cell">@member.PhoneNumber</td>

                                                @{
                                                    string admin = "Admin";
                                                    string developer = "Developer";
                                                    string projectManager = "Project Manager";
                                                    string submitter = "Submitter";

                                                    var memberRoles = await RolesService.GetUserRolesAsync(member);
                                                }
                                                

                                                @if(memberRoles.Contains(admin))
                                                {
                                                    <td class="cell">@admin</td>
                                                }

                                                @if(memberRoles.Contains(developer))
                                                {
                                                    <td class="cell">@developer</td>
                                                }

                                                @if(memberRoles.Contains(projectManager))
                                                {
                                                    <td class="cell">@projectManager</td>
                                                }

                                                @if(memberRoles.Contains(submitter))
                                                {
                                                    <td class="cell">@submitter</td>
                                                }
                                                
                                                @*Actions*@
                                                <td class="cell text-center">
												    <a class="btn-sm app-btn-secondary me-2" asp-action="Details" asp-controller="Tickets" asp-route-id="@member.Id">
													    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye-fill" viewBox="0 0 16 16">
														    <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0z"/>
														    <path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8zm8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7z"/>
													    </svg>
												    </a>
												    @if (User.IsInRole(nameof(Roles.Admin)) || User.IsInRole(nameof(Roles.Admin)))
												    {
													    <a class="btn-sm app-btn-secondary me-2" asp-action="Edit" asp-controller="Tickets" asp-route-id="@member.Id">
															<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
															    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
															    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
														    </svg>
													    </a>
													    <a class="btn-sm app-btn-secondary g-2" asp-action="Archive" asp-controller="Tickets" asp-route-id="@member.Id">
														    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
															    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
															    <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
														    </svg>
													    </a>
												    }
											    </td>
                                            </tr>

                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>


@section scripts{ 

    <script>
        $(document).ready(function () {
            $("#allUsers").DataTable({
                "scrollY" : "450px",
                "scrollCollapse":true,
                "paging": true
            });
        });
    </script>    
}