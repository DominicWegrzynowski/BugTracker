@model BugTracker.Models.Ticket

@{
    ViewData["Title"] = "New Ticket";
}


<div class="app-wrapper">
	<div class="app-content pt-3 p-md-3 p-lg-4">
		<div class="container-xl">
            <h3 class="d-flex justify-content-start">New Ticket</h3>

			<div class="row g-3 mb-4 align-items-center justify-content-between">
                <div class="col-6 text-start">
                    <div class="app-card shadow-sm h-100 p-2">
                        <div class="card-body">
                            <form class="row g-3" asp-action="Create" asp-controller="Tickets" method="post" enctype="multipart/form-data">
                                <div class="form-group col-12">
                                    <label asp-for="Title" class="control-label"></label>
                                    <input asp-for="Title" class="form-control" />
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                                <div class="form-group col-12">
                                    <label asp-for="Description" class="control-label"></label>
                                    <textarea asp-for="Description" class="form-control" style="min-height: 70px;"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                                <div class="form-group col-12">
                                    <label asp-for="Project" class="control-label"></label>
                                    <select asp-for="ProjectId" class ="form-control" asp-items="ViewBag.ProjectId"></select>
                                </div>
                                <div class="form-group col-12">
                                    <label asp-for="TicketType" class="control-label"></label>
                                    <select asp-for="TicketTypeId" class ="form-control" asp-items="ViewBag.TicketTypeId"></select>
                                </div>
                                <div class="form-group col-12">
                                    <label asp-for="TicketPriority" class="control-label"></label>
                                    <select asp-for="TicketPriorityId" class ="form-control" asp-items="ViewBag.TicketPriorityId"></select>
                                </div>
                                <div class="form-group col-12 text-start">
                                    <input type="submit" value="Create" class="btn btn-primary text-white" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


